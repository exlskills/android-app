<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".CourseActivity"
        android:orientation="vertical">

    <!-- This coordinator Layout matches the parent's height, I want to height to match till the BottomNaviagtionView and not below it -->
    <ProgressBar
            android:id="@+id/mainProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:id="@+id/courseLayout"
            android:visibility="invisible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:isScrollContainer="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <ImageView android:id="@+id/courseBannerImage" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/courseTitle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/courseHeadline" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>